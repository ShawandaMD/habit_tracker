<h1>Welcome <%=@user.name%>!</h1>
<h3>You're activitely pursuing <%=user_habits.count%> habits.</h3>

<% if false %>
<%@user.habits.each do |habit| %>
  <%= habit.completed_activity_name%>
<% end %>
<% end %>

<h2><%= link_to "My Habits", user_habits_path(current_user) %></h2>
<h2><%= link_to "Create A New Habit", new_user_habit_path(current_user) %></h2>



<div class="logout">
<%= form_tag ({controller: 'sessions', action: 'destroy'}) do %>
  <input type=submit value='logout'>
<% end %>
</div>
